<mvc:View controllerName="sap.ui.demo.walkthrough.controller.DeltaAdmin"
   xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
    <App>
        <Page 
            title="Delta Food Admin"
			backgroundDesign= "Solid"
			titleAlignment="Center">
            <VBox class="sapUiSmallMargin">
		<f:SimpleForm id="SimpleFormChange354wide"
			editable="true"
			layout="ResponsiveGridLayout"
			title="Company Details"
			labelSpanXL="4"
			labelSpanL="3"
			labelSpanM="4"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="0"
			emptySpanL="4"
			emptySpanM="0"
			emptySpanS="0"
			columnsXL="2"
			columnsL="1"
			columnsM="1"
			singleContainerFullSize="false">
			<f:content>
				<Label text="Full company name" />
				<Input id="name" value="{JSN>/CompanyName}" />
				<Label text="Company contact email" />
				<Input value="{JSN>/ContactEmail}"/>
				<Label text="Company Product"/>
				<Input value="{JSN>/CompanyProduct}"/>
				<Label text="Company contact Number" />
				<Input value="{JSN>/ContactNumber}"/>
                <Label text="Company regitration number" />
				<Input value="{JSN>/CompanyRegNumber}" />
				
				<Button type="Accept" text="Accept" press="" >
                    <layoutData><OverflowToolbarLayoutData priority="NeverOverflow" /></layoutData>
                </Button>
                <Button type="Warm" text="Decline"  press="">
                    <layoutData><OverflowToolbarLayoutData  priority="NeverOverflow" /></layoutData>
                </Button>
			</f:content>
		</f:SimpleForm>
	</VBox>
        </Page>
    </App>
</mvc:View>